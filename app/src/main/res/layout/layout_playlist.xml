<com.vpaliy.melophile.ui.view.TranslatableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:minHeight="@dimen/shot_collapsed_app_bar_height"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        tools:text="I Love San Francisco"
        android:textSize="30dp"
        style="@style/Widget.BigTitle"
        android:transitionName="@string/playlist_title_trans_name"
        android:textColor="@color/white_50"
        android:id="@+id/playlist_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

   <!-- <com.vpaliy.chips_lover.ChipsLayout
