        app:layout_constraintLeft_toLeftOf="parent" />  -->



    <TextView
        android:id="@+id/tracks_number"
        android:drawableTop="@drawable/ic_heart"
        android:drawablePadding="@dimen/spacing_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="138 Likes"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/share"
        app:layout_constraintTop_toBottomOf="@+id/playlist_title"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/share"
        android:text="@string/share_action"
        android:drawableTop="@drawable/ic_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tracks_number"
        app:layout_constraintLeft_toRightOf="@+id/tracks_number"
        app:layout_constraintBottom_toBottomOf="@+id/tracks_number"
        app:layout_constraintRight_toRightOf="parent" />



</com.vpaliy.melophile.ui.view.TranslatableLayout>