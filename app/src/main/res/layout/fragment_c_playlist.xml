<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:transitionGroup="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@drawable/evolve"
            android:transitionName="@string/user_trans_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/spacing_huge" />

        <TextView
            android:id="@+id/username"
            tools:text="Imagine Dragons"
            style="@style/Widget.BigTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar"
            app:layout_constraintLeft_toLeftOf="@+id/user_avatar"
            android:layout_marginTop="@dimen/spacing_huge"
            app:layout_constraintRight_toRightOf="@+id/user_avatar" />

        <TextView
            android:id="@+id/follow"
            android:drawableLeft="@drawable/ic_person_add"
            android:drawableStart="@drawable/ic_person_add"
            android:text="Follow"
            android:textAllCaps="true"
            android:textColor="@color/white_50"
            android:elevation="@dimen/z_card"
            android:background="@drawable/rectangular"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_big"
            app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/description"
            app:layout_constraintWidth_default="wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/spacing_huge"
            app:layout_constraintTop_toBottomOf="@+id/follow"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/followers"
            android:drawableTop="@drawable/ic_followers"
            android:drawablePadding="@dimen/spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="138 followers"
            app:layout_constraintLeft_toLeftOf="@+id/playlists_count"
            app:layout_constraintRight_toLeftOf="@+id/likes"
            app:layout_constraintTop_toTopOf="@+id/playlists_count"
            app:layout_constraintBottom_toBottomOf="@+id/playlists_count" />


        <TextView
            android:id="@+id/playlists_count"
            android:layout_marginTop="@dimen/spacing_huge"
            android:drawableTop="@drawable/ic_music_lib"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="28 mins"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintRight_toLeftOf="@+id/followers"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <TextView
            android:id="@+id/likes"
            tools:text="24345 Likes"
            android:gravity="center"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableTop="@drawable/ic_playlist_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/followers"
            app:layout_constraintLeft_toRightOf="@+id/followers"
            app:layout_constraintBottom_toBottomOf="@+id/followers"
            app:layout_constraintRight_toRightOf="parent" />


        <ProgressBar
            android:id="@+id/media_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_huge"
            app:layout_constraintTop_toBottomOf="@+id/followers"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/empty_media_message"
            android:text="@string/user_empty_media"
            style="@style/Widget.BigTitle"
            android:textSize="30sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/media"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/z_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</FrameLayout>